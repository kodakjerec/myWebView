<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/WebViewActionBar"
    app:elevation="0dp">

    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        android:layout_width="match_parent" android:layout_height="72dp"
        app:popupTheme="@style/WebViewPopupOverlay" android:paddingTop="16dp">

        <TextView android:id="@+id/custom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/WebViewAppToolbarTitle"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:gravity="center"/>

    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>